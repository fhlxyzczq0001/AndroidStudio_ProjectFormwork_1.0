<?xml version="1.0" encoding="utf-8"?>
<!--无网络-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_back"
    android:orientation="vertical"
>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:gravity="center"
                  android:orientation="vertical">
        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/common_icon_nonetwork"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:text="哎呀，网络连接出现了问题"
            android:textColor="@color/account_text_gray"
        />
        <TextView
            android:id="@+id/prompt_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:background="@drawable/common_shape_red_line_white_bg"
            android:paddingBottom="5dip"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingTop="5dip"
            android:text="点击重新加载"
            android:textColor="@color/app_color"
        />

    </LinearLayout>
</LinearLayout>